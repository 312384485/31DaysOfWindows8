
<script type="text/html" id="tileGroup-Template">
    <section>
        <h2><a href="#">day <span data-bind="text: day"></span> - <span data-bind="text: title"></span></a></h2>
        <div class="tilesCollection" data-bind="template: {name: viewModel.selectTemplate, foreach: tiles }">
        </div>
    </section>
</script>

<script type="text/html" id="largeTile-Template">
    <div class="tile large live exclude"
        data-stops="0, 25%, 50%, 75%, 100%" 
        data-speed="3000" 
        data-delay="0" 
        data-direction="horizontal" 
        data-stack="true">
        
        <div class="live-front">
            <img class="live-img" data-bind="attr: { src: image, alt: title }" />
        </div>
        <div class="live-back">
            <img class="live-img" src="/images/placeholder/large_blank.png" data-bind="attr: { src: image, alt: title }" />
        </div>
        <span class="tile-date whitetxt"><span class="date">0</span><span class="month">article</span></span>
        <!--<span class="tile-cat red">Illustration</span>-->
    </div>
</script>

<script type="text/html" id="mediumTile-Template">
    <div class="tile medium live" data-stops="0,75%,100%" data-speed="750" data-delay="1500">
        <div class="live-front">
            <img class="live-img" src="images/placeholder/medium_blank.png" alt="Article 2" />
        </div>
        <div class="live-back">
            <img class="live-img" src="images/placeholder/medium_blank.png" alt="Article 2" />
        </div>
        <!--
            <span class="tile-date limetxt"><span class="date">06</span><span class="month">article</span></span>
            <span class="tile-cat lime">Title This</span>
        -->
    </div>
</script>

<script type="text/html" id="smallTile-Template">
    <a data-bind="attr: {href: webSite}" target="_blank">
        <div class="tile small live" data-stops="0,100%" data-speed="500" data-delay="2500">
            <div class="live-front blue">
                <span class="tile-text">Solid Color</span>
            </div>
            <div class="live-back green">
                <img class="live-img" data-bind="attr: {src: tileImage, alt: title}" />
            </div>
        </div>
    </a>
</script>

<div class="md-content">
    <div id="collections" class="md-container">
	    <div class="md-viewport md-viewport-horizontal">
		    <div class="md-scrollable" data-bind="template: {name: 'tileGroup-Template', foreach: days}">
            </div>
        </div>
    </div>
</div>