<script type="text/html" id="largeTile-Template">
    <div class="tile large exclude"
        data-stops="0, 25%, 50%, 75%, 100%" 
        data-speed="3000" 
        data-delay="0" 
        data-direction="horizontal" 
        data-stack="true"
        data-bind="css: { live: live === 'true' }">
        
        <div class="live-front">
            <img class="live-img" 
                data-bind="attr: {src: image, alt: title}" />
        </div>
        <div class="live-back">
            <img class="live-img" 
                data-bind="attr: { src: image, alt: title }" />
        </div>
    </div>
</script>

<script type="text/html" id="mediumTile-Template">
    <div class="tile medium" 
            data-stops="0,75%,100%" data-speed="750" 
            data-bind="css: { live: live === 'true' }, attr: { 'data-delay': delay }">
        <div class="live-front">
            <img class="live-img" data-bind="attr: {src: tileImage }" />
        </div>
        <div class="live-back">
            <span class="tile-text" data-bind="text: webSite"></span>
        </div>
        
        <span class="tile-date whitetxt"><span class="date" data-bind="text: title"></span><span class="month" data-bind="text: subtitle"></span></span>
        
    </div>
</script>

<script type="text/html" id="smallTile-Template">
    <a data-bind="attr: {href: webSite}" target="_blank">
        <div class="tile small" 
            data-bind="css: { live: live === 'true' }"
            data-stops="0,100%" data-speed="500" data-delay="2500">

            <div class="live-front blue">
                <span class="tile-text" data-bind="text: title"></span>
            </div>
    
            <div class="live-back green">
                <img class="live-img" data-bind="attr: {src: tileImage, alt: title}" />
            </div>
        </div>
    </a>
</script>

